<Page x:Class="SalonCoiffure.ContactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SalonCoiffure"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ContactPage">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#AFD9D9D9" Width="745" Height="395">
            <StackPanel Margin="20" Orientation="Horizontal" VerticalAlignment="Top">

                
                <Image Source="/images/Barbershop.png" Width="100" Height="100" Margin="0,0,20,0"/>

                
                <StackPanel Orientation="Vertical" VerticalAlignment="Top" Width="600">
                    <TextBlock Text="À propos de nous :" FontSize="20" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" FontSize="14" Foreground="#444444">
                        <Run Text="Bienvenue sur SalonBill, votre solution tout-en-un pour la gestion intelligente 
                             de votre salon de coiffure."/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="Notre mission est simple : vous faire gagner du temps et offrir à vos clients une expérience 
                             fluide et professionnelle. Grâce à notre application, vous pouvez gérer facilement  vos clients, 
                             vos services, vos factures et vos paiements — le tout depuis une seule plateforme intuitive."/>
                        <LineBreak/>
                        <LineBreak/>
                       
                            <Run Text="Pourquoi nous choisir ?" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="• 💼 Gestion client centralisée"/>
                            <LineBreak/>
                            <Run Text="• 🧾 Facturation rapide et efficace"/>
                            <LineBreak/>
                            <Run Text="• 💳 Suivi des paiements simple et sécurisé"/>
                            <LineBreak/><LineBreak/>
                         <Run Text="Nous joindre par téléphone :" FontWeight="Bold"/>
                        <LineBreak/>
                        <Run Text="Vous pouvez joindre notre équipe de relation client au :"/>
                        <LineBreak/>
                        <Run Text="1-855-255-9038"/>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
