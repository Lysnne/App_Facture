<Page x:Class="SalonCoiffure.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HomePage">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Gérez votre salon de coiffure avec facilité"
                       FontSize="60"
                       FontWeight="Bold"
                       Foreground="White"
                       TextWrapping="Wrap"
                       FontFamily="Cambria"
                       Margin="0,0,0,20"/>

            <TextBlock FontSize="30"
                       TextWrapping="Wrap"
                       Foreground="#FF0D3F31">
                <Run Text="Une solution "/>
                <Run Text="complète" Foreground="#BD9A9A"/>
                <Run Text=" pour la "/>
                <Run Text="facturation" Foreground="#BD9A9A"/>
                <Run Text=", la "/>
                <Run Text="gestion" Foreground="#BD9A9A"/>
                <Run Text=" des clients et la gestion "/>
                <Run Text="des services" Foreground="#BD9A9A"/>
                <Run Text=" pour "/>
                <Run Text="votre" Foreground="#BD9A9A"/>
                <Run Text=" salon de coiffure."/>
            </TextBlock>
        </StackPanel>


        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/images/image 1.png"
                   Stretch="Uniform"
                   MaxWidth="500"
                   MaxHeight="500"/>
        </Grid>


        
    </Grid>
</Page>
